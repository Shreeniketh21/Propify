<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Change color as needed -->

    <!-- Background color -->
    <solid android:color="#FFFFFF"/> <!-- Change if needed -->

    <!-- Corner radius (optional) -->
    <corners android:radius="8dp" /> <!-- Adjust for rounded edges -->

    <!-- Padding (optional) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />

</shape>

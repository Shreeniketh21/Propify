<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.ChangePasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/toolbarRl"
        android:background="@drawable/toolbar_bg02">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarBackBtn"
            android:src="@drawable/back_white"
            android:background="@color/black_trans"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarTitleTv"
            android:textSize="15sp"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:text="@string/change_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="?attr/colorOnPrimary"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/profileIv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/toolbarTitleTv"
            android:background="?attr/colorOnPrimary"
            android:src="@drawable/person_black"
            app:shapeAppearanceOverlay="@style/ImageStyle_Circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginLabelTv"
            android:textSize="15sp"
            android:textAlignment="center"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:text="@string/to_change_password_you_must_verify_its_really_you_by_entering_your_current_password_your_new_password_must_be_different_from_current_password"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profileIv"
            android:textColor="?attr/colorOnPrimary"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_below="@+id/toolbarRl">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currentPasswordTl"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/black"
            app:startIconDrawable="@drawable/lock_black"
            app:startIconTint="@android:color/black"
            android:textColorHint="@color/black"
            android:hint="@string/password"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/currentPasswordEt"
                android:textColor="@color/black"
                android:background="@drawable/edittext_border"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newPasswordTl"
            android:layout_below="@id/currentPasswordTl"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/black"
            app:startIconDrawable="@drawable/lock_black"
            app:startIconTint="@android:color/black"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="@string/new_password"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newPasswordEt"
                android:textColor="@color/black"
                android:background="@drawable/edittext_border"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmNewPasswordTl"
            android:layout_below="@id/newPasswordTl"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/black"
            app:startIconDrawable="@drawable/lock_black"
            app:startIconTint="@android:color/black"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="@string/new_password"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/confirmNewPasswordEt"
                android:background="@drawable/edittext_border"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submitBtn"
            android:layout_alignParentBottom="true"
            android:text="@string/submit_new_password"
            android:backgroundTint="@color/black"
            android:minHeight="@dimen/m_button_height"/>
    </RelativeLayout>
</RelativeLayout>
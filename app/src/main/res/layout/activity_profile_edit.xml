<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileEditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/toolbarRl"
        android:background="@drawable/toolbar_bg02">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarBackBtn"
            android:src="@drawable/back_white"
            android:background="@color/black_trans"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/toolbarTitleTv"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:text="@string/edit_profile"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/toolbarProfileRl"
            android:layout_below="@+id/toolbarTitleTv"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorOnPrimary"
                android:scaleType="centerCrop"
                android:src="@drawable/person_black"
                app:shapeAppearanceOverlay="@style/ImageStyle_Circle" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileImagePickFab"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/add_photo_black"
                app:fabCustomSize="35dp"
                app:backgroundTint="@color/white"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fullNameTv"
            android:textSize="20sp"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_below="@+id/toolbarProfileRl"
            android:layout_centerHorizontal="true"
            android:paddingHorizontal="10dp"
            android:textColor="?attr/colorOnPrimary"
            tools:text="@tools:sample/full_names"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarRl"
        android:padding="10dp">
        <EditText
            android:id="@+id/nameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:inputType="textPersonName|textCapWords"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:hint="@string/name"
            android:padding="20dp"
            android:textColorHint="@color/black"
            android:drawableStart="@drawable/person_black"/>
        <EditText
            android:id="@+id/dobEt"
            android:layout_below="@+id/nameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:inputType="text|date"
            android:textColor="@color/black"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
            android:layout_marginTop="10dp"
            android:hint="@string/dob_dd_mm_yyyy"
            android:padding="20dp"
            android:textColorHint="@color/black"
            android:drawableStart="@drawable/calendar_black"/>
        <EditText
            android:id="@+id/emailEt"
            android:layout_below="@+id/dobEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:inputType="textEmailAddress"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:hint="@string/email"
            android:padding="20dp"
            android:textColorHint="@color/black"
            android:drawableStart="@drawable/email_white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phoneInputRl"
            android:layout_below="@+id/emailEt"
            android:layout_marginTop="4dp">

            <com.hbb20.CountryCodePicker
                android:id="@+id/countryCodePicker"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@drawable/edittext_border"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:minWidth="60dp"
                android:minHeight="60dp"
                app:ccp_autoDetectCountry="true"
                app:ccp_rememberLastSelection="true"
                app:ccp_showFlag="false"
                app:ccp_showNameCode="false" />

            <EditText
                android:id="@+id/phoneNumberEt"
                android:layout_toEndOf="@id/countryCodePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:background="@drawable/edittext_border"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/phone_number"
                android:textColor="@color/black"
                android:padding="20dp"
                android:textColorHint="@color/black"
                android:drawableStart="@drawable/phone_black"/>
        </RelativeLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updateBtn"
            android:layout_alignParentBottom="true"
            android:minHeight="@dimen/m_button_height"
            android:text="@string/update"
            android:backgroundTint="@color/black"
            app:icon="@drawable/person_black"/>
    </RelativeLayout>
</RelativeLayout>
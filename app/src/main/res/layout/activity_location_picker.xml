<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LocationPickerActivity">

    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/mapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/toolbarRl"
        android:background="@drawable/toolbar_bg02">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarBackBtn"
            android:src="@drawable/back_white"
            android:background="@color/black_trans"
            android:padding="10dp"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarTitleTv"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:text="Pick Location"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarGpsBtn"
            android:src="@drawable/gps_black"
            android:background="@color/black_trans"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            app:tint="@color/white" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchCv"
            android:layout_below="@+id/toolbarTitleTv"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:minWidth="30dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:strokeWidth="0dp">
            <androidx.fragment.app.FragmentContainerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/autocomplete_fragment"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/doneLl"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectedPlaceTv"
                android:textColor="@color/white"
                android:textColorHint="@color/black"
                style="@style/TextAppearance.Material3.BodySmall"
                tools:text="@tools:sample/lorem[8]/"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doneBtn"
            android:text="Done"
            app:icon="@drawable/location_black"
            android:backgroundTint="@color/black"
            android:minHeight="@dimen/m_button_height"/>
    </LinearLayout>
</RelativeLayout>